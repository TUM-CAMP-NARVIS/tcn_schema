#ifndef PCPD_RPC_SRG
#define PCPD_RPC_SRG

#include "tcnart_msgs/msg/Types.idl"
#include "std_msgs/msg/Header.idl"
#include "tcnart_msgs/rpc/Requests.idl"

#include "pcpd_msgs/msg/CameraSensor.idl"
#include "pcpd_msgs/msg/DataflowBufferInfo.idl"


module pcpd_msgs {
  module rpc {

    enum ServiceType {
        ST_CORE,
        ST_PRODUCER,
        ST_CONSUMER
    };
  
    enum RecorderStatus {
        RS_INVALID,
        RS_IDLE,
        RS_RECORDING,
        RS_PAUSED,
        RS_ERROR
    };
  
  
    struct DeviceContextReply {
        string name;
        boolean is_valid;
        int32 depth_units_per_meter;
        int32 frame_rate;
        string sensor_type;
        string serial_number;
        uint64 timestamp_offset;

        pcpd_msgs::msg::CameraSensor value;
        tcnart_msgs::rpc::RPCResponseStatus status;
    };
  
    struct BufferInfoReply {
        pcpd_msgs::msg::BufferInfo value;
        tcnart_msgs::rpc::RPCResponseStatus status;
    };

    struct ServiceInfoReply {
        string name;
        string service_type;
        
        tcnart_msgs::rpc::ParameterListSchema schema;
        tcnart_msgs::rpc::RPCResponseStatus status;

    };

    struct ComponentInfoReply {
        string name;
        string component_type;
        
        tcnart_msgs::rpc::ParameterListSchema schema;
        tcnart_msgs::rpc::RPCResponseStatus status;

    };
  
  };
};





#endif